    const w: u32 = 100
    
    // Invalid - type mismatch
    let bad: u32 = "string"
    
    // Invalid - inferred type mismatch with nullable basic type
    let nullBad = 42
    
    // Test const assignment validation
    fn testConstAssignment(const param: {x: u32}) {
        // Invalid - assigning const parameter to non-const attribute
        let nonConstAttr = param
    }
}