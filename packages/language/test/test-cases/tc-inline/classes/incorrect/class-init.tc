
// Non-class type error - should be caught by validation
type NotAClass = struct { x: i32, y: i32 }
/// @Error(TCE100): Invalid use of 'new'
let s1 = new NotAClass(1, 2)  // Should error: Cannot use 'new' with non-class type

type Point<T> = class {
    let x: T
    let y: T
    
    // Multiple init methods - should infer without context
    fn init(x: T, y: T) {
        this.x = x
        this.y = y
    }
    
    fn init(value: T) {
        this.x = value
        this.y = value
    }
}

type C= class {}

fn main() {
    /// @Error(TCE021): No matching 'init' method found for argument types
    let v1 = new Point<string>(1)  // Should error: no init with 2 params

    /// @Error(TCE101): Class has no `init` method, therefor `new` cannot accept any arguments
    let c = new C(1,2)

    /// @Error(TCE102): Generic class 'Point' requires 1 generic argument(s)
    let v2 = new Point(1)
}

