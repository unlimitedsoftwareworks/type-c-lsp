type ServerResponse = variant {
    Ok(),
    Error(code: u32)
}

type GenericServerResponse<T> = variant {
    Ok(),
    Error(code: T)
}

fn test_case_4(rn: TestUnit) {
    let resp1 = ServerResponse.Error(404)
    let resp2 = GenericServerResponse.Error<String>("404 Not found")

    resp1.code = 200
    resp2.code = "Ok"

    rn.assert_eq(resp1.code, 200)
    rn.assert_obj_eq(resp2.code, "Ok")
}

fn main() -> u32 {
    let test_1 = new TestUnit("test 1", "Test Set/Get", test_case_1)
    let test_2 = new TestUnit("test 2", "Test Variant", test_case_2)
    let test_3 = new TestUnit("test 3", "Test Interface/class/join", test_case_3)
    let test_4 = new TestUnit("test 4", "Test variant field assignment", test_case_4)

    let set = new UnitSet("STD Test 10", "Tests pattern matching expression and statements", [
        test_1, 
        test_2, 
        test_3,
        test_4
    ])
    
    return set.run()
}