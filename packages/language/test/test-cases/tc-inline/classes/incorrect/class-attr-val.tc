type TestAttributeValidation = class {
    // Valid cases - both type and initializer
    let x: u32 = 42
    let y: string = "hello"
    
    // Valid cases - only type (no initializer is ok)
    let a: u32
    let b: string
    
    // Valid cases - only initializer (inferred type)
    let c = 100
    let d = "world"
    let e = [1, 2, 3]
    
    // Invalid case - no type, no initializer (should error)
    /// @Error(TCE210):  must have either a type annotation or an initializer
    let invalid
    
    // Valid - const with initializer
    let const z = 42
    
    // Valid - const with type and initializer
    let const w: u32 = 100
    
    // Invalid - type mismatch
    /// @Error(TCE006): string is not assignable to u32
    let bad: u32 = "string"
    
    // Test const assignment validation
    fn testConstAssignment(param: {x: u32}) {
        // Invalid - assigning const parameter to non-const attribute
        /// @Error(TCE195): Cannot assign immutable parameter
        let nonConstAttr = param
    }
}