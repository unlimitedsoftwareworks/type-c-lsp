// Test coroutine call validation with incorrect arguments

cfn loop(x: u32[]) -> u32 {
    yield x[0]
    yield x[1]
}

fn main() {
    let co = coroutine loop
    
    // ❌ Wrong argument type - should be u32[]
    let x = co([1, 2, 3])  // i32[] instead of u32[]
    
    // ❌ Wrong number of arguments - expects 1
    let y = co()
    
    // ❌ Wrong number of arguments - expects 1
    let z = co([1u32], [2u32])
    
    // ❌ Completely wrong type
    let w = co("string")
}

cfn stringGen(prefix: string, count: u32) -> string {
    yield prefix
}

fn testStrings() {
    let co = coroutine stringGen
    
    // ❌ Arguments in wrong order
    let a = co(5u32, "hello")
    
    // ❌ Wrong types
    let b = co(10u32, 20u32)
    
    // ❌ Too few arguments
    let c = co("hello")
    
    // ❌ Too many arguments
    let d = co("hello", 5u32, "extra")
}

cfn simpleGen() -> u32 {
    yield 1u32
}

fn testNoParams() {
    let co = coroutine simpleGen
    
    // ❌ Too many arguments - expects 0
    let x = co(42u32)
    
    // ❌ Too many arguments - expects 0
    let y = co(1u32, 2u32)
}